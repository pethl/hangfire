<p id="notice"><%= notice %></p>


<h3>
  <strong><%= @product.name %></strong></h3>
  <%= @product.desc %>
  

<% if @product.productitems.any? %>

  <table class="table  table-striped">
    <thead>
      <tr>
        <th>Ingredient </th>
        <th>Volume </th>
        <th>Price per (p/g)</th>
        <th>Total cost</th>
      </tr>
    </thead>
    <tbody>
       <% @product.productitems.each do |item| %>
        <tr>
          <td><%= Ingredient.where(:id => item.ingredient_id).first.name %></td>
          <td><%= item.volume %></td>
          <td><%= Productitem.average_price(item.ingredient_id) %></td>
          <td><%= Productitem.total_price(item) %></td>
          </tr>      
      <% end %>
    </tbody>
     <tr>
     <td colspan="3"></td>
     <td>    TOTAL HERE
       </td>
      <tr>
  </table>  
    <% end %>
    <br><br>



