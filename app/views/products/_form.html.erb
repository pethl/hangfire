<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="row">
  <div class="col-xs-6 col-md-3">
  <h2>Edit Product</h2>
  <table class="table table-condensed">
  <tr>
  <td><%= f.label :name %></td>
   <td><%= f.text_field :name %></td>
</tr>
<tr>
    <td>  <%= f.label :category_id %></td>
    <td>  <%= f.collection_select :category_id, (Category.where(:reference => 'product')), :id, :name, :prompt => true %></td>
</tr>
  <tr>
<td>    <%= f.label :desc %></td>
    <td><%= f.text_field :desc, :size => 40, :placeholder => "...enter product description here..." %></td>
  </tr>
  </table>
  </div></div>


  <h3>Ingredients</h3>
   <%= f.fields_for :productitems do |builder| %>
      <%= render 'productitem_fields', f: builder %>
    <% end %>
    <%= link_to_add_fields "+ add new ingredient", f, :productitems %>
    
    <h3>Use quantity of existing product</h3>  
     <%= f.fields_for :friendships do |builder| %>
        <%= render 'friendship_fields', f: builder %>
      <% end %> 
    <%= link_to "+ add new product", friendships_path(:product_id => @product), :method => :post %>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
