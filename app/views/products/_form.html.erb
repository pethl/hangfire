<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
    <div class="field">
      <%= f.label :category_id %>
      <%= f.collection_select :category_id, (Category.where(:reference => 'product')), :id, :name, :prompt => true %><br>
  <br>
  <div class="field">
    <%= f.label :desc %>
    <%= f.text_area :desc %>
  </div>


  <h3>Ingredients</h3>
   <%= f.fields_for :productitems do |builder| %>
      <%= render 'productitem_fields', f: builder %>
    <% end %>
    <%= link_to_add_fields "+ add new ingredient", f, :productitems %>
    
    <h3>Use quantity of existing product</h3>  
     <%= f.fields_for :friendships do |builder| %>
        <%= render 'friendship_fields', f: builder %>
      <% end %> 
    <%= link_to "+ add new product", friendships_path(:product_id => @product), :method => :post %>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
