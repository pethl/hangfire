
<h3>
  <strong><%= @product.name %></strong></h3>
  <%= @product.desc %>
  

<% if @product.productitems.any? %>

  <table class="table  table-striped">
    <thead>
      <tr>
        <th>Ingredient </th>
        <th>Volume </th>
        <th>Pricing Type </th>
        <th>Price per (p/g)</th>
        <th>Total cost</th>
      </tr>
    </thead>
    <tbody>
       <% @product.productitems.each do |item| %>
        <tr>
          <td><%= Ingredient.where(:id => item.ingredient_id).first.name %></td>
          <td><%= item.volume %></td>
       
          <td><%= item.price_selector %></td>
          <td><%= number_with_precision(Ingredient.get_price(item.ingredient_id,item.price_selector), :precision => 4) %></td>
          <td><%= number_with_precision(Productitem.total_price(item), :precision => 4) %></td>
          </tr>      
      <% end %>
    </tbody>
     <tr>
      <td colspan="3"></td>
      <td><strong>Total Price</strong></td>
      <td><strong><%= number_with_precision(Product.get_total_price(@product.id), :precision => 2) %><strong></td>
    <tr>
  </table>  
  
  <% else %>
  
  There are no ingredients associated with this product.<br>
  To add an ingredient go to edit.
  
    <% end %>
    <br>



<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'All HF products', products_path %>
