<h1>Categories</h1>
<%= link_to '+ add new category', new_category_path %>
<br><br>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
       <td><%= link_to 'Show', category %> | 
       <%= link_to 'Edit', edit_category_path(category) %> | 
        <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


