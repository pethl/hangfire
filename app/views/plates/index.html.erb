<h1>HF plates</h1>
<% @plates_by_category.each do |category_id, plates| %>

<h3><%= Category.where(:id => category_id).first.name %></h3>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Product #</th>
      <th>Cost</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% plates.each do |plate| %>
      <tr>
        <td><%= plate.name %></td>
        <td><%= plate.price %></td>
        <td><%= plate.productlinks.inspect %></td>
        <td><%= Product.get_plate_total_ratios_price(plate.id) %></td>
        <td><%= link_to 'Show', plate %> | 
        <%= link_to 'Edit', edit_plate_path(plate) %> | 
        <%= link_to 'Destroy', plate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>

<%= link_to 'New Plate', new_plate_path %>
