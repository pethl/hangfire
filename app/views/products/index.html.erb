<h3>Products</h3>
<br>

<table class="table">
  
  <tbody>
  
    <% @products.each do |product| %>
      <tr>  
        <td><strong><%= product.name %></strong></td>
        <td><%= product.desc %></td>
        <td>[<%= link_to 'Show', product %> | 
        <%= link_to 'Edit', edit_product_path(product) %> | 
