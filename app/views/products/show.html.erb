
<h3>
  <strong><%= @product.name %></strong></h3>
  <%= @product.desc %>
  

<% if @product.productitems.any? %>

  <table class="table  table-striped">
    <thead>
      <tr>
        <th>Ingredient </th>
        <th>Volume </th>
        <th>Pricing Type </th>
        <th>Price per (p/g)</th>
        <th>Total cost</th>
      </tr>
    </thead>
    <tbody>
       <% @product.productitems.each do |item| %>
        <tr>
          <td><%= Ingredient.where(:id => item.ingredient_id).first.name %></td>
          <td><%= item.volume %></td>
          <td><%= item.price_selector %></td>
          <td><%= number_with_precision(Ingredient.get_price(item.ingredient_id,item.price_selector), :precision => 4) %></td>
          <td><%= number_with_precision(Productitem.total_price(item), :precision => 4) %></td>
          </tr>      
      <% end %>
    </tbody>
     <tr>
      <td colspan="3"></td>
      <td><strong>Total Price</strong></td>
      <td><strong><%= number_with_precision(Product.get_total_price(@product.id), :precision => 2) %><strong></td>
    <tr>
  </table>  
  <% if @friendships.any? %>
  <% @friendships.each do |friend| %>
    <%= Product.where(:id => friend.friend_id).first.name %>
    [<%= friend.prodvolume %>g] 
    [<%= tweight = number_with_precision(Product.get_total_weight(@product.id), :precision => 2) %>] 
     (<%= link_to "remove", friend, :method => :delete %>)<br>  
     
  <% @friendproductitems = Productitem.where(:product_id => friend.friend_id) %>
  
  <table class="table  table-striped">
    <thead>
      <tr>
        <th>Ingredient </th>
        <th>Volume </th>
        <th>Pricing Type </th>
        <th>Price per (p/g)</th>
        <th>Total cost</th>
      </tr>
    </thead>
    <tbody>
       <% @friendproductitems.each do |frienditem| %>
        <tr>
          <td><%= Ingredient.where(:id => frienditem.ingredient_id).first.name %></td>
          <td><%= number_with_precision(((frienditem.volume.to_f/tweight.to_f).to_f)*(134), :precision => 4) %></td>
          <td><%= frienditem.price_selector %></td>
          <td><%= number_with_precision(Ingredient.get_price(frienditem.ingredient_id,frienditem.price_selector), :precision => 4) %></td>
          <td><%= number_with_precision(Productitem.total_price(frienditem), :precision => 4) %></td>
          </tr>      
      <% end %>
    </tbody>
     <tr>
      <td colspan="3"></td>
      <td><strong>Total Price</strong></td>
      <td><strong><%= number_with_precision(Product.get_total_price(friend.friend_id), :precision => 2) %><strong></td>
    <tr>
  </table>
  <% end %>
  
  <% else %>
  x
    <% end %>
        <% end %>
    <br>
