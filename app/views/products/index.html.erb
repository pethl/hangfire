       <% if product.items.count > 0 %>
        
         <% product.items.each do |item| %>
        <tr>   
          <td>- <%= item.weight %> grams / <%= number_to_currency item.price, unit: "Â£", seperator: ",", delimiter: ""  %>
            </td>
            <td></td>
            <td></td>
          </tr>            
          <% end %>
        
    <% end %>    
      </tbody>

<% end %>
    
</table>

