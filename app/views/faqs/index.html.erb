<h2>FAQs</h2>

<table clas="table" table-layout: fixed>
  <thead>
    <tr>
      <th style="width: 10%">Sort Order</th>
      <th style="width: 25%">Title</th>
      <th style="width: 50%">Desc</th>
      <th colspan="1" style="width: 15%"></th>
    </tr>
  </thead>

  <tbody>
    <% @faqs.each do |faq| %>
      <tr>
        <td><%= best_in_place faq, :sort, :as => :input %></td>
        <td><%= faq.title %></td>
        <td><%= faq.desc %></td>
        <td><%= link_to 'Show', faq %> | 
        <%= link_to 'Edit', edit_faq_path(faq) %> | 
        <%= link_to 'Destroy', faq, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Faq', new_faq_path %>
<button class="btn">	<%= form_tag import_faqs_path, multipart: true do %>
	                      <%= file_field_tag :file %>
	                      <%= submit_tag "Import FAQs" %>
                        <% end %>
</button>

