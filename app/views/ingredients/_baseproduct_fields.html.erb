    <fieldset>
    
    <%= f.date_select :purchase_date %>
    <%= f.collection_select :vendor_id, (Vendor.all.sort_by { |h| h[:name] }), :id, :name, :prompt => true %>
    <%= f.text_field :unit_count, help: "Will be 1 unless entering a multipack" %>
    <%= f.text_field :unit_weight, :placeholder => "grams" , help: "IMPORTANT: Enter weight in grams" %>
    <%= f.text_field :total_weight, :placeholder => "grams" , help: "IMPORTANT: Enter weight in grams, if only 1 item, this will be the same as unit weight" %>
    <%= f.text_field :unit_price, :placeholder => "pence" , help: "IMPORTANT: Enter price in pence" %>
    <%= f.text_field :total_price, :placeholder => "pence" , help: "IMPORTANT: Enter price in pence, if only 1 item, this will be the same as unit price" %>
    <%= f.text_field :price_per, :readonly => true, help: "DO NOT ENTER, will be calculated"  %>
    
      <%= f.check_box :_destroy %>
      <%= f.label :_destroy, "Remove this purchase record" %>
     
    </fieldset>